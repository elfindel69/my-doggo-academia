{% extends 'base.html.twig' %}

{% block body %}

    <div class="text-center"><h3>Inscription</h3></div>

    <div class="container d-flex align-items-center justify-content-center" style="height:70vh">

        <div class="col-4">

            {{ form_start(form) }}

            {{ form_row(form.email) }}

            {{form_label(form.plainPassword, 'Mot de Passe')}}
            {{ form_widget(form.plainPassword) }}

            {{ form_rest(form) }}

            <div class="text-center"><button type="submit" class="btn btn-primary my-4">Valider</button></div>
            
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
