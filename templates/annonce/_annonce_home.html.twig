
<div class="card my-card my-3 col-md-3">
    <div class="card-header text-muted">
        <a href="" class="text-reset">
            {{ annonce.annonceur.nom }}
        </a>

            {#    Rajouter un lien vers la page de detail de l'annonceur     #}

    </div>
    <img src="{{ annonce.chiens[0].photos[0].url }}" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">{{ annonce.titre }}</h5>
        <p class="text-center"> Il y a <strong> {{ annonce.chiens|length }} </strong> chien(s) disponible(s) !</p>
        <p class="card-text">{{ annonce.description}}</p>
        <p class="card-text">Races des chiens : </p>
            <ul class="">
                {% for chien in annonce.chiens %}

                    {% for race in chien.races %}
                        <li>{{ race.nom }}</li>
                    {% endfor %}
                {% endfor %}
            </ul>
        <a href="#" class="btn btn-primary">Voir +</a>
    </div>
    <div class="card-footer text-muted text-end">
        <i> Modifi√©e le : {{annonce.dateMaJ|date('d/m/y') }} </i>
    </div>
</div>
