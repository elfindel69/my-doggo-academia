{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center my-4"><h2>Mes messages</h2></div>
    <div class="container d-flex justify-content-center" style="min-height: 50vh;">
        <div class="row d-flex">
            {% for message in messages %}
                {% include 'message/single_message.html.twig' with {message: message } only %}
            {% endfor %}

        </div>

    </div>
    <div class="text-center my-4">
        <a href="{{ path("envoi_message",{id:id}) }}" class="btn btn-primary">Envoyer un message</a>
    </div>

{% endblock %}

