{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="text-center my-4">
            <h3>Demande Adoption #{{ demande.id }}</h3>
        </div>

        <div class="text-center my-4">
            <h5>Adoptant</h5>
        </div>

        <div class="row d-flex justify-content-center text-center my-4">
            <div class="col-4"><strong>Nom :</strong> {{ demande.adoptant.nom }}</div>
            <div class="col-4"><strong>Email :</strong> {{ demande.adoptant.email }}</div>
            <div class="col-4"><strong>Telephone :</strong> {{ demande.adoptant.telephone }}</div>
        </div>

        <div class="text-center my-4">
            <h5>Chiens</h5>
        </div>

        <div class="row d-flex justify-content-center text-center m-4">
            {% for chien in demande.chiens %}
                <div class="card col-4 mx-4">
                    <div class="my-2" style="
                            background-image: url({{ chien.photos[0].url }});
                            background-size: cover;
                            background-repeat: no-repeat;
                            border-radius: 5px;
                            height: 300px;"></div>
                    <div class="row my-4">
                        <div class="col-4"><strong>Nom :</strong> {{ chien.nom }}</div>
                        <div class="col-4"><strong>Age :</strong> {{ chien.age }} ans</div>
                        <div class="col-4"><strong>Taille :</strong> {{ chien.taille }} cm</div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
